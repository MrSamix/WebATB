    <!-- Tables -->
    <li class='menu-item@(currentPage == "/Tables/Basic" ? " active" : "")'>
      <a asp-controller="Tables" asp-action="Basic" class="menu-link">
        <i class="menu-icon tf-icons ri-table-alt-line"></i>
        <div>Tables</div>
      </a>
    </li>
    <!-- Data Tables -->
    <li class='menu-item@(currentPage.StartsWith("/Tables/DataTables") ? " active open" : "")'>
      <a href="https://demos.themeselection.com/materio-aspnet-core-mvc-admin-template/html/vertical-menu-template/tables-datatables-basic.html" target="_blank" class="menu-link">
        <i class="menu-icon tf-icons ri-grid-line"></i>
        <div>Datatables</div><div class="badge bg-label-primary fs-tiny rounded-pill ms-auto">Pro</div>
