    <!-- Misc -->
    <li class="menu-header mt-7"><span class="menu-header-text">Misc</span></li>
    <li class="menu-item">
      <a href='@TempData.Peek("documentation")' target="_blank" class="menu-link">
        <i class="menu-icon tf-icons ri-article-line"></i>
        <div>Documentation</div>
