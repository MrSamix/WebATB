<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">Do you want to delete this user?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row g-2">
                    <div class="col-6">
                        <a id="confirmDeleteBtn"
                           class="btn btn-danger w-100"
                           data-base-url="@Url.Action("Delete", "Users", new { area = "Admin" })">Yes</a>
                    </div>
                    <div class="col-6">
                        <button type="button" class="btn btn-outline-secondary w-100" data-bs-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>
