@model List<WebATB.Models.Category.CategoryItemModel>

@section PageStyles {
	<link rel="stylesheet" href="https://cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css" />
	<style>
		#myTable td.desc-cell .desc-content {
			max-height: 130px;
			overflow-y: auto;
			overflow-x: auto;
			display: block;
		}

		#myTable td.desc-cell .desc-content img {
			max-width: 100%;
			height: auto;
		}

		#myTable td.desc-cell .desc-content p {
			margin: 0;
		}
	</style>
}

@section PageScripts {
	<script src="https://cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>
	<script>
		let table = new DataTable('#myTable');
	</script>
}

<table id="myTable">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Image</th>
			<th>Description</th>
		</tr>
	</thead>
    @foreach (var category in Model)
	{
		<tr>
			<td>@category.Id</td>
			<td>@category.Name</td>
			<td><img src="@category.Image" width="100" class="rounded-3" alt="@category.Name" /></td>
			<td class="desc-cell">
				<div class="desc-content">
					@Html.Raw(category.Description)
				</div>
			</td>
		</tr>
	}
</table>


