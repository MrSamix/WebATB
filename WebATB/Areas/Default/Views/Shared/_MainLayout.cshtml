<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/cat.png" />
    <title>WebATB</title>
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/site.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <script src="https://cdn.tiny.cloud/1/tkb4zuo6oky4zzxc94gbdpxkv4wakrg7ja5vp7l9p8d3ytjq/tinymce/8/tinymce.min.js" referrerpolicy="origin" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Main")">АТБ</a>
                <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navbarCollapse" style="">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        @* <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Main">Категорії</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Products">Продукти</a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                        </li> *@
                    </ul>

                    @* <form class="d-flex me-2">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form> *@

                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav align-items-center">
                            @await Component.InvokeAsync("UserLink")
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item me-1">
                                    <a class="btn btn-outline-light btn-sm" asp-action="Index" asp-controller="Users" asp-area="Admin">Адмін-панель</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-sm" asp-action="Logout"
                                   asp-controller="Account">Вихід</a>
                            </li>
                        </ul>
                    }
                    else
                    {

                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="btn btn-outline-light ms-2" asp-action="Login" asp-controller="Account">Вхід</a>
                                <a class="btn btn-outline-light ms-2" asp-action="Register" asp-controller="Account">Реєстрація</a>
                                @* <a class="nav-link" asp-action="Register"
                                   asp-controller="Account">Реєстрація</a> *@
                            </li>
                        </ul>
                    }

                    @* @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        var photoUrl = User?.FindFirst("image")?.Value
                            ?? User?.FindFirst("picture")?.Value
                            ?? User?.FindFirst("avatar")?.Value;

                        var photoSrc = !string.IsNullOrWhiteSpace(photoUrl) && photoUrl.StartsWith("~")
                            ? Url.Content(photoUrl)
                            : photoUrl;

                        <div class="d-flex align-items-center ms-2">
                            @* @await Component.InvokeAsync("UserLink");
                            <span class="text-white-50 me-2" title="User">
                                @if (!string.IsNullOrWhiteSpace(photoSrc))
                                {
                                    <img src="@(photoSrc ?? "/no-image-icon.png")"
                                         alt="User photo"
                                         class="rounded-circle"
                                         style="width:28px;height:28px;object-fit:cover;border:1px solid rgba(255,255,255,.25);" />
                                }
                                else
                                {
                                    <i class="fas fa-user-circle fa-lg"></i>
                                }
                            </span>
                            <a asp-controller="Account" asp-action="Index" class="text-white me-3">@User.Identity!.Name</a>
                            <form class="mb-0" method="post" asp-area="Identity" asp-controller="Account" asp-action="Logout">
                                <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <a class="btn btn-outline-light ms-2" asp-action="Login" asp-controller="Account">Login</a>
                        <a class="btn btn-outline-light ms-2" asp-action="Register" asp-controller="Account">Sign Up</a>
                    } *@
                </div>
            </div>
        </nav>
    </header>


    <div class="container">

        @RenderBody()

    </div>



    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>