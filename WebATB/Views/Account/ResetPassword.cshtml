@model WebATB.Models.Account.ResetPasswordViewModel

<h1 class="text-center mt-4">Скидання паролю</h1>
<p class="text-center">Створіть новий пароль для облікового запису: <strong>@Model.Email</strong></p>

<form method="post" asp-action="ResetPassword" class="col-md-6 offset-md-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Hidden fields required by the POST action -->
    <input asp-for="Email" type="hidden" />
    <input asp-for="Token" type="hidden" />

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Змінити пароль</button>
    <a asp-action="Login" class="btn btn-secondary">Назад</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
